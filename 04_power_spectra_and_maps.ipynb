    "kappa_ln_hr = prepare_convergence_for_lensing(primary_ln, target_resolution)\n",
    "\n",
    "# Save maps for use in forward modeling\n",
    "print(f\"\\n💾 Saving prepared convergence maps...\")\n",
    "\n",
