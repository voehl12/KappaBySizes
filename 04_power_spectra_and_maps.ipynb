    "print(f\"  ✅ Saved convergence_map_lognormal.npy\")\n",
    "print(f\"  ✅ Saved convergence_maps_metadata.json\")\n",
    "\n",
    "# Create final comparison visualization\n",
    "fig, ((ax1, ax2), (ax3, ax4)) = plt.subplots(2, 2, figsize=(15, 12))\n",
